<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout style="@style/LinearLayoutStyleVertical">

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <TextView
                style="@style/RegistrationTextViewStyle"
                android:text="@string/mandatory_fields" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/editText1"
                    style="@style/EditTextStyle"
                    android:hint="@string/name_hint"
                    android:inputType="textCapWords"
                    android:maxLength="40" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/gpsAddressCardView"
            style="@style/CardViewStyle"
            android:visibility="gone">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/gpsAddress" />

                <EditText
                    android:id="@+id/gpsAddress"
                    style="@style/EditTextStyle"
                    android:hint="@string/address_hint"
                    android:inputType="textPostalAddress" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/addressCardView"
            style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/address" />

                <EditText
                    android:id="@+id/editText2"
                    style="@style/EditTextStyle"
                    android:hint="@string/address_hint"
                    android:inputType="textPostalAddress" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/localityCardView"
            style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/locality" />

                <EditText
                    android:id="@+id/editText3"
                    style="@style/EditTextStyle"
                    android:hint="@string/locality_hint"
                    android:inputType="textCapWords"
                    android:maxLength="30" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cityCardView"
            style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/city" />

                <Button
                    android:id="@+id/button"
                    style="@style/ButtonStyle"
                    android:text="@string/city_button" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/pincodeCardView"
            style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/pincode" />

                <EditText
                    android:id="@+id/editText4"
                    style="@style/EditTextStyle"
                    android:hint="@string/pincode_hint"
                    android:inputType="number"
                    android:maxLength="6" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/mobile" />

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/mobile_country_code" />

                <EditText
                    android:id="@+id/editText5"
                    style="@style/EditTextStyle"
                    android:hint="@string/mobile_hint"
                    android:inputType="number"
                    android:maxLength="10" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/email" />

                <EditText
                    android:id="@+id/editText6"
                    style="@style/EditTextStyle"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:maxLength="60" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/services" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner1"
                    style="@style/SpinnerStyle"
                    android:entries="@array/service_array"
                    android:prompt="@string/services_hint" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/date" />

                <EditText
                    android:id="@+id/editText7"
                    style="@style/EditTextStyle"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/date_hint"
                    android:inputType="date" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/venue" />

                <EditText
                    android:id="@+id/editText8"
                    style="@style/EditTextStyle"
                    android:hint="@string/venue_hint"
                    android:inputType="textMultiLine"
                    android:maxLines="5" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/delivery_mode" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner2"
                    style="@style/SpinnerStyle"
                    android:entries="@array/mode_of_delivery_array"
                    android:prompt="@string/delivery_mode_hint" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <LinearLayout style="@style/LinearLayoutStyleHorizontal">

                <TextView
                    style="@style/RegistrationTextViewStyle"
                    android:text="@string/package_type" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner3"
                    style="@style/SpinnerStyle"
                    android:entries="@array/package_type_array"
                    android:prompt="@string/package_type_hint" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <Button
                android:id="@+id/button1"
                style="@style/ButtonStyle"
                android:text="@string/submit" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView style="@style/CardViewStyle">

            <Button
                android:id="@+id/button2"
                style="@style/ButtonStyle"
                android:text="@string/reset" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>